@using TalentConnect.UI.Infrastructure;
@model TalentConnect.UI.ViewModels.VacanciesViewModel
@{
    ViewBag.Title = "Available Vacancies";
}

@section PageTitle{
    <h2>Avaliable Vacancies</h2>
}

<ul class="job-list full">
    @foreach (var vacancy in Model.Vacancies)
    {
    <li>
        <a href="job-page.html">
            <img src="images/job-list-logo-01.png" alt="">
            <div class="job-list-content">
                <h4>@vacancy.Title <span class="full-time">Full-Time</span></h4>
                <div class="job-icons">
                    <span><i class="fa fa-map-marker"></i> @vacancy.City, @vacancy.Province</span>
                    <span><i class="fa fa-money"></i>$@vacancy.Rate</span>
                </div>
                <p>@vacancy.ShortDescription</p>
            </div>
        </a>
        <div class="clearfix"></div>
    </li>
    }
</ul>

@section OnReadyPageScript{
    $("#candidates-nav").attr("id", "current");
}