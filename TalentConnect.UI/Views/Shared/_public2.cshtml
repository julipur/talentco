@using TalentConnect.UI.Infrastructure;
<!DOCTYPE html>
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!-->
<html lang="en">
<!--<![endif]-->
<head>

    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Talent Connect - @ViewBag.Title</title>

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    @assets.corecss()

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    @RenderSection("HeadScripts", false)
</head>

<body>
    <div id="wrapper">


        <!-- Header
        ================================================== -->
        <header class="sticky-header">
            <div class="container">
                <div class="sixteen columns">

                    <!-- Logo -->
                    <div id="logo">
                        <h1><a href="home"><img src="/images/logo.png" alt="Talent Connect" width="196" height="41" /></a></h1>
                    </div>

                    <!-- Menu -->
                    <nav id="navigation" class="menu">
                        <ul id="responsive">
                            <li>
                                @Html.ActionLink("Home", Navigation.Home.Index, Navigation.Home.Controller, new { }, new { id = "home-nav" })
                            </li>
                            <li>
                                @Html.ActionLink("Jobs", Navigation.Vacancies.Index, Navigation.Vacancies.Controller, new { }, new { id = "candidates-nav" })
                            </li>
                            <li>
                                @Html.ActionLink("About", Navigation.About.Index, Navigation.About.Controller, new { }, new { id = "about-nav" })
                            </li>
                            <li>
                                @Html.ActionLink("Contact", Navigation.Contact.Index, Navigation.Contact.Controller, new { }, new { id = "contact-nav" })
                            </li>
                        </ul>
                        <ul class="float-right">
                            <li><a href="@Navigation.Account.Controller/@Navigation.Account.Register"><i class="fa fa-user"></i> Sign Up</a></li>
                            <li><a href="@Navigation.Account.Controller/@Navigation.Account.Logon"><i class="fa fa-lock"></i> Log In</a></li>
                        </ul>

                    </nav>

                    <!-- Navigation -->
                    <div id="mobile-navigation">
                        <a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i> Menu</a>
                    </div>

                </div>
            </div>
        </header>
        <div class="clearfix"></div>

        <!-- Titlebar
        ================================================== -->
        <div id="titlebar" class="single">
            <div class="container">

                <div class="sixteen columns">
                    @RenderSection("PageTitle", true)
                </div>
            </div>
        </div>


        <!-- Content
        ================================================== -->
        <div class="container">
            @RenderBody()
        </div>

        <!-- Footer
        ================================================== -->
        <div class="margin-top-0"></div>

        <div id="footer">
            <!-- Main -->
            <div class="container">

                <div class="seven columns">
                    <h4>About</h4>
                    <p>
                        Our expertise lie in finding the right people for the job. We put our focus in understanding your needs and then
                        finding the right resources for you.
                    </p>
                </div>

                <div class="three columns">&nbsp;</div>
                <div class="three columns">&nbsp;</div>

                <div class="three columns">
                    <h4>Company</h4>
                    <ul class="footer-links">
                        <li><a href="#">About Us</a></li>
                        <li><a href="terms">Terms of Service</a></li>
                        <li><a href="privacy">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>

            <!-- Bottom -->
            <div class="container">
                <div class="footer-bottom">
                    <div class="sixteen columns">
                        <h4>Follow Us</h4>
                        <ul class="social-icons">
                            <li><a class="facebook" href="#"><i class="icon-facebook"></i></a></li>
                            <li><a class="twitter" href="#"><i class="icon-twitter"></i></a></li>
                            <li><a class="gplus" href="#"><i class="icon-gplus"></i></a></li>
                            <li><a class="linkedin" href="#"><i class="icon-linkedin"></i></a></li>
                        </ul>
                        <div class="copyrights">©  Copyright @DateTime.Now.Year by <a href="#">Talent Connect</a>. All Rights Reserved.</div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Back To Top Button -->
        <div id="backtotop"><a href="#"></a></div>

    </div>
    <!-- Wrapper / End -->
    <!-- Scripts
    ================================================== -->
    <script src="scripts/jquery-2.1.3.min.js"></script>
    <script src="scripts/custom.js"></script>
    <script src="scripts/jquery.superfish.js"></script>
    <script src="scripts/jquery.themepunch.tools.min.js"></script>
    <script src="scripts/jquery.themepunch.revolution.min.js"></script>
    <script src="scripts/jquery.themepunch.showbizpro.min.js"></script>
    <script src="scripts/jquery.flexslider-min.js"></script>
    <script src="scripts/chosen.jquery.min.js"></script>
    <script src="scripts/jquery.magnific-popup.min.js"></script>
    <script src="scripts/waypoints.min.js"></script>
    <script src="scripts/jquery.counterup.min.js"></script>
    <script src="scripts/jquery.jpanelmenu.js"></script>
    <script src="scripts/stacktable.js"></script>
    <script src="scripts/headroom.min.js"></script>
    @RenderSection("Scripts", false)
    <script type="text/javascript">
        $(document).ready(function () {
            @RenderSection("OnReadyPageScript", false)
        });

        

    </script>
</body>
</html>